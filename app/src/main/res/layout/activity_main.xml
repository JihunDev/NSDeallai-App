<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/main_login_bu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:onClick="mainOnClick"/>

    <Button
        android:id="@+id/main_mypage_bu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="내페이지"
        android:onClick="mainOnClick" />

    <Button
        android:id="@+id/main_chat_bu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="채팅"
        android:onClick="mainOnClick"/>
    <Button
        android:id="@+id/main_logout_bu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:onClick="mainOnClick"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="별점 등록"
        android:id="@+id/starbutton"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="구매 상세페이지"
        android:id="@+id/product_button"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="상품 등록페이지"
        android:id="@+id/product_insert_button"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="장바구니"
        android:id="@+id/see_cart_button"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="상품리뷰 리스트"
        android:id="@+id/product_review_list_button"
        />

</LinearLayout>

